@model EventRegistrationSystem.ViewModel.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
    Layout = "_UserLayout";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6">
        <h1 class="text-2xl font-bold text-slate-800 mb-6">My Profile</h1>

        @if (TempData["Success"] != null)
        {
            <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Profile" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Full Name -->
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="FullName" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                    <span asp-validation-for="FullName" class="text-sm text-red-600"></span>
                </div>

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="Email" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                    <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                </div>

                <!-- Phone Number -->
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="PhoneNumber" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                    <span asp-validation-for="PhoneNumber" class="text-sm text-red-600"></span>
                </div>

                <!-- Gender -->
                <div>
                    <label asp-for="Gender" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <select asp-for="Gender" class="w-full px-4 py-2 border border-slate-300 rounded-lg">
                        <option value="">Select gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>

                <!-- Birth Date -->
                <div>
                    <label asp-for="BirthDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="BirthDate" type="date" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                </div>

                <!-- Address -->
                <div class="md:col-span-2">
                    <label asp-for="Address" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <textarea asp-for="Address" rows="3" class="w-full px-4 py-2 border border-slate-300 rounded-lg"></textarea>
                </div>

                <!-- Profile Picture -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-2">Profile Picture</label>
                    <div class="flex items-center space-x-6">
                        <div class="shrink-0">
                            @if (!string.IsNullOrEmpty(Model.ExistingProfilePictureUrl))
                            {
                                <img src="@Model.ExistingProfilePictureUrl" alt="Profile" class="h-20 w-20 rounded-full object-cover border-2 border-indigo-200" />
                            }
                            else
                            {
                                <div class="h-20 w-20 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 border-2 border-indigo-200">
                                    <i class="fas fa-user text-3xl"></i>
                                </div>
                            }
                        </div>
                        <div class="flex-1">
                            <input asp-for="ProfilePicture" type="file" accept="image/*" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                            <p class="text-xs text-slate-500 mt-1">JPG, PNG up to 2MB</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-3">
                <a asp-action="Dashboard" class="px-6 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                    Save Changes
                </button>
            </div>
        </form>

        <hr class="my-8 border-slate-200" />

        <div class="text-center">
            <a asp-action="ChangePassword" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                <i class="fas fa-key mr-1"></i> Change Password
            </a>
        </div>
    </div>
</div>