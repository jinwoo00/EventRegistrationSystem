@model IEnumerable<EventRegistrationSystem.DTOs.UserCertificateDTO>
@{
    ViewData["Title"] = "My Certificates";
    Layout = "_UserLayout";
}

<div class="max-w-7xl mx-auto px-4">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 py-12 px-6 rounded-2xl shadow-lg mb-8">
        <h1 class="text-3xl font-bold text-white">My Certificates</h1>
        <p class="text-indigo-100 mt-2">Download your certificates for attended events.</p>
    </div>
</div>

<div class="max-w-7xl mx-auto px-4">
    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-2xl shadow-sm">
            <i class="fas fa-certificate text-slate-300 text-6xl mb-4"></i>
            <h3 class="text-xl font-semibold text-slate-700">No certificates yet</h3>
            <p class="text-slate-500 mt-2">Once you attend events and the admin approves your certificates, they will appear here.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var cert in Model)
            {
                <div class="bg-white rounded-2xl shadow-md border border-slate-200 overflow-hidden">
                    <div class="p-5">
                        <h2 class="text-xl font-bold text-slate-800 mb-2">@cert.EventTitle</h2>
                        <p class="text-sm text-slate-600 mb-1">Issued: @cert.IssuedAt.ToString("MMMM dd, yyyy")</p>
                        <p class="text-sm text-slate-500 mb-3">Certificate #: @cert.CertificateNumber</p>
                        <div class="flex justify-end">
                            <a asp-action="DownloadCertificate" asp-route-id="@cert.Id"
                               class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm">
                                <i class="fas fa-download mr-2"></i>Download
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>