@model EventRegistrationSystem.ViewModel.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "_UserLayout";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6">
        <h1 class="text-2xl font-bold text-slate-800 mb-6">Change Password</h1>

        @if (TempData["Success"] != null)
        {
            <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                @TempData["Success"]
            </div>
        }

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="CurrentPassword" type="password" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                </div>

                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="NewPassword" type="password" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-700 mb-1"></label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-slate-300 rounded-lg" />
                </div>
            </div>

            <div class="mt-6 flex justify-end space-x-3">
                <a asp-action="Profile" class="px-6 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                    Change Password
                </button>
            </div>
        </form>
    </div>
</div>