@using EventRegistrationSystem.ViewModel.User
@model UserDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_UserLayout";
}

<!-- Welcome Banner -->
<div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
    <h1 class="text-2xl font-bold text-white">Welcome back, @Model.UserName!</h1>
    <p class="text-indigo-100 mt-1">You've attended @Model.AttendedCount out of @Model.TotalEvents events.</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
        <div class="h-10 w-10 rounded-xl bg-indigo-100 flex items-center justify-center text-indigo-700">
            <i class="fas fa-calendar-check text-lg"></i>
        </div>
        <div class="ml-3">
            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Total Attended</p>
            <h3 class="text-xl font-bold text-slate-800">@Model.AttendedCount</h3>
        </div>
    </div>
    <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
        <div class="h-10 w-10 rounded-xl bg-emerald-100 flex items-center justify-center text-emerald-700">
            <i class="fas fa-certificate text-lg"></i>
        </div>
        <div class="ml-3">
            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Certificates</p>
            <h3 class="text-xl font-bold text-slate-800">@Model.CertificatesCount</h3>
        </div>
    </div>
    <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
        <div class="h-10 w-10 rounded-xl bg-amber-100 flex items-center justify-center text-amber-700">
            <i class="fas fa-calendar-plus text-lg"></i>
        </div>
        <div class="ml-3">
            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Upcoming</p>
            <h3 class="text-xl font-bold text-slate-800">@Model.UpcomingCount</h3>
        </div>
    </div>
    <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
        <div class="h-10 w-10 rounded-xl bg-purple-100 flex items-center justify-center text-purple-700">
            <i class="fas fa-history text-lg"></i>
        </div>
        <div class="ml-3">
            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Past</p>
            <h3 class="text-xl font-bold text-slate-800">@Model.PastCount</h3>
        </div>
    </div>
</div>

<!-- Upcoming Events -->
@if (Model.UpcomingEvents.Any())
{
    <h2 class="text-xl font-semibold text-slate-800 mb-4">Your Upcoming Events</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
        @foreach (var ev in Model.UpcomingEvents)
        {
            <div class="bg-white rounded-2xl shadow-md border border-slate-200 overflow-hidden">
                @if (!string.IsNullOrEmpty(ev.EventImageUrl))
                {
                    <img src="@ev.EventImageUrl" alt="@ev.EventTitle" class="h-40 w-full object-cover" />
                }
                else
                {
                    <div class="h-40 w-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                        <i class="fas fa-calendar text-indigo-400 text-4xl"></i>
                    </div>
                }
                <div class="p-5">
                    <h3 class="text-lg font-bold text-slate-800">@ev.EventTitle</h3>
                    <div class="text-sm text-slate-600 mt-2 space-y-1">
                        <div><i class="fas fa-calendar-day text-indigo-500 w-5"></i> @ev.EventStartDate.ToString("MMM dd, yyyy · h:mm tt")</div>
                        <div><i class="fas fa-map-marker-alt text-amber-500 w-5"></i> @ev.EventLocation</div>
                    </div>
                    <a asp-action="MyTickets" class="mt-4 inline-block text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                        View Ticket <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="bg-slate-50 rounded-2xl p-8 text-center mb-10">
        <i class="fas fa-calendar-times text-slate-400 text-4xl mb-3"></i>
        <p class="text-slate-600">You have no upcoming events. <a asp-action="Index" class="text-indigo-600 font-medium">Browse events</a> to get started.</p>
    </div>
}

<!-- Past Events -->
@if (Model.PastEvents.Any())
{
    <h2 class="text-xl font-semibold text-slate-800 mb-4">Recently Attended</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var ev in Model.PastEvents)
        {
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5">
                <h3 class="text-lg font-bold text-slate-800">@ev.EventTitle</h3>
                <p class="text-sm text-slate-500 mt-1">@ev.EventStartDate.ToString("MMMM dd, yyyy")</p>
                <div class="mt-3">
                    <span class="inline-flex items-center text-xs bg-green-100 text-green-800 px-2.5 py-1 rounded-full">
                        <i class="fas fa-check-circle mr-1"></i> Attended
                    </span>
                </div>
                @* You can add certificate download link here if needed *@
            </div>
        }
    </div>
}