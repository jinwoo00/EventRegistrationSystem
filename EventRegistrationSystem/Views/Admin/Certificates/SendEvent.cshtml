@using EventRegistrationSystem.DTOs
@using EventRegistrationSystem.Models
@model EventRegistrationSystem.Repositories.PagedResult<ParticipantCertificateDTO>
@inject IWebHostEnvironment WebHostEnvironment

@{
    var ev = ViewBag.Event as Event;
    Layout = "_AdminLayout";
    ViewData["Title"] = $"Send Certificates - {ev?.Title}";

    // Capture route parameters for pagination
    var routeParams = new Dictionary<string, object>
    {
        { "eventId", ev?.Id }
    };
}

<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">
    <div class="max-w-7xl mx-auto">

        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-white">Send Certificates</h1>
                    <p class="text-indigo-100 mt-1">@ev?.Title – @ev?.StartDate.ToString("MMM dd, yyyy")</p>
                </div>
                <a asp-controller="Events" asp-action="Index"
                   class="bg-white/20 backdrop-blur-sm text-white px-5 py-2.5 rounded-xl hover:bg-white/30 transition inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Events
                </a>
            </div>
        </div>

        <!-- Two‑column layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left: Instructions / Approve All -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-800 mb-4 flex items-center">
                        <i class="fas fa-check-circle text-indigo-500 mr-2"></i>Certificate Approval
                    </h2>
                    <p class="text-sm text-slate-600 mb-4">
                        Review the list of checked‑in participants and approve certificates for those who should receive one.
                        Approved certificates will be generated automatically and become available for participants to download.
                    </p>
                    @if (ViewBag.TotalPending > 0)
                    {
                        <form asp-action="ApproveAll" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="eventId" value="@ev?.Id" />
                            <button type="submit" class="w-full bg-emerald-600 text-white px-4 py-2 rounded-lg hover:bg-emerald-700 transition text-sm">
                                <i class="fas fa-check-double mr-2"></i>Approve All Pending (@ViewBag.TotalPending)
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Right: Participants List -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
                    <div class="p-6 border-b border-slate-200">
                        <h2 class="text-lg font-semibold text-slate-800 flex items-center">
                            <i class="fas fa-user-check text-indigo-500 mr-2"></i>Checked‑in Participants
                            <span class="ml-2 bg-slate-200 text-slate-700 px-2 py-0.5 rounded-full text-xs">@Model.TotalCount</span>
                        </h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-slate-200">
                            <thead class="bg-slate-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Attendee</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Checked In</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Certificate</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Action</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200">
                                @foreach (var p in Model.Items)
                                {
                                    <tr class="hover:bg-slate-50">
                                        <td class="px-6 py-4">
                                            <div class="font-medium text-slate-900">@p.AttendeeName</div>
                                            <div class="text-sm text-slate-500">@p.AttendeeEmail</div>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-slate-600">
                                            @p.CheckedInAt.ToString("MMM dd, h:mm tt")
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (p.HasCertificate)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <i class="fas fa-check-circle mr-1"></i>Approved @(p.CertificateSentAt?.ToString("MMM dd") ?? "")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-sm text-slate-500">Pending</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (!p.HasCertificate)
                                            {
                                                <form asp-action="Approve" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="registrationId" value="@p.RegistrationId" />
                                                    <input type="hidden" name="eventId" value="@ev?.Id" />
                                                    <button type="submit" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                                        <i class="fas fa-check mr-1"></i>Approve
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-sm text-slate-400">Approved</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Items.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="px-6 py-10 text-center text-slate-500">
                                            <i class="fas fa-user-slash text-3xl text-slate-300 mb-2"></i>
                                            <p>No checked‑in participants yet.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Pagination -->
                        <partial name="_Pagination" model="Model" view-data='new ViewDataDictionary(ViewData) { { "routeParams", routeParams } }' />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>