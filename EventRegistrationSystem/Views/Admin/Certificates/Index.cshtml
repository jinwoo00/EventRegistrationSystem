@using EventRegistrationSystem.DTOs
@model EventRegistrationSystem.Repositories.PagedResult<CertificateListItemDTO>

@{
    ViewData["Title"] = "Certificates";
    Layout = "_AdminLayout";

    var routeParams = new Dictionary<string, object>
    {
        { "eventId", Context.Request.Query["eventId"].ToString() },
        { "search", Context.Request.Query["search"].ToString() }
    };
}

<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">
    <div class="max-w-7xl mx-auto">

        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-white">@ViewBag.EventTitle - Certificates</h1>
                    <p class="text-indigo-100 mt-1">Manage issued certificates and track deliveries.</p>
                </div>
                <div class="flex space-x-3">
                    <a asp-action="EventOverview" class="bg-white text-indigo-700 px-5 py-2.5 rounded-xl font-medium hover:bg-indigo-50 transition shadow-md">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Events
                    </a>
                    <a asp-controller="CertificateSend" asp-action="Event" asp-route-eventId="@ViewBag.EventId"
                       class="bg-white text-indigo-700 px-5 py-2.5 rounded-xl font-medium hover:bg-indigo-50 transition shadow-md inline-flex items-center">
                        <i class="fas fa-paper-plane mr-2"></i>Send Pending (@ViewBag.Pending)
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Summary Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
                <div class="h-10 w-10 rounded-xl bg-indigo-100 flex items-center justify-center text-indigo-700">
                    <i class="fas fa-certificate text-lg"></i>
                </div>
                <div class="ml-3">
                    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Total Issued</p>
                    <h3 class="text-xl font-bold text-slate-800">@ViewBag.TotalIssued</h3>
                </div>
            </div>
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
                <div class="h-10 w-10 rounded-xl bg-amber-100 flex items-center justify-center text-amber-700">
                    <i class="fas fa-clock text-lg"></i>
                </div>
                <div class="ml-3">
                    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Pending</p>
                    <h3 class="text-xl font-bold text-slate-800">@ViewBag.Pending</h3>
                </div>
            </div>
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
                <div class="h-10 w-10 rounded-xl bg-emerald-100 flex items-center justify-center text-emerald-700">
                    <i class="fas fa-calendar-check text-lg"></i>
                </div>
                <div class="ml-3">
                    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Issued Today</p>
                    <h3 class="text-xl font-bold text-slate-800">@ViewBag.IssuedToday</h3>
                </div>
            </div>
        </div>

        <!-- Filters Card -->
        <form method="get" class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 mb-6">
            <input type="hidden" name="eventId" value="@ViewBag.EventId" />
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                <div class="md:col-span-2">
                    <label class="block text-xs font-medium text-slate-500 mb-1">Search</label>
                    <div class="relative">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input type="text" name="search" value="@Context.Request.Query["search"]"
                               placeholder="Attendee name, email, certificate number..."
                               class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500" />
                    </div>
                </div>
                <div class="flex items-center space-x-3 md:col-span-2 justify-end">
                    <a asp-action="Index" asp-route-eventId="@ViewBag.EventId" class="px-4 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50 transition">Clear</a>
                    <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-sm">
                        <i class="fas fa-filter mr-2"></i>Apply
                    </button>
                </div>
            </div>
        </form>

        <!-- Certificates Table -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Certificate #</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Attendee</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Event</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Issued</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 bg-white">
                        @foreach (var cert in Model.Items)
                        {
                            <tr class="hover:bg-slate-50 transition">
                                <td class="px-6 py-4">
                                    <span class="font-mono text-sm font-medium text-slate-900">@cert.CertificateNumber</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-medium text-slate-900">@(cert.AttendeeName ?? "N/A")</div>
                                    <div class="text-sm text-slate-500">@cert.AttendeeEmail</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-slate-900">@cert.EventTitle</div>
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    @cert.IssuedAt.ToString("MMM dd, yyyy")<br />
                                    <span class="text-xs text-slate-400">@cert.IssuedAt.ToString("h:mm tt")</span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (cert.SentAt.HasValue)
                                    {
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                            <i class="fas fa-check-circle mr-1"></i> Sent @cert.SentAt.Value.ToString("MMM dd")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-600 border border-slate-200">
                                            <i class="fas fa-clock mr-1"></i> Not sent
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center space-x-2">
                                        @* <a asp-action="Download" asp-route-id="@cert.Id"
                                           class="text-slate-500 hover:text-indigo-600 p-2 hover:bg-indigo-50 rounded-lg transition"
                                           title="Download PDF">
                                            <i class="fas fa-download"></i>
                                        </a> *@
                                        <form asp-action="Revoke" asp-route-id="@cert.Id" method="post" class="inline"
                                              onsubmit="return confirm('Revoke this certificate? This action cannot be undone.');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@Context.Request.Query["eventId"]" />
                                            <button type="submit"
                                                    class="text-slate-500 hover:text-rose-600 p-2 hover:bg-rose-50 rounded-lg transition"
                                                    title="Revoke">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="6" class="px-6 py-16 text-center">
                                    <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-slate-100 mb-4">
                                        <i class="fas fa-certificate text-slate-400 text-2xl"></i>
                                    </div>
                                    <h3 class="text-lg font-semibold text-slate-800 mb-2">No certificates found</h3>
                                    <p class="text-slate-500 mb-4">Try adjusting your filters or generate certificates for checked‑in attendees.</p>
                                    <a asp-controller="Events" asp-action="Index"
                                       class="inline-flex items-center px-5 py-2.5 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition shadow-md">
                                        <i class="fas fa-calendar mr-2"></i>View Events
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <partial name="_Pagination" model="Model" view-data='new ViewDataDictionary(ViewData) { { "routeParams", routeParams } }' />
        </div>
    </div>
</div>