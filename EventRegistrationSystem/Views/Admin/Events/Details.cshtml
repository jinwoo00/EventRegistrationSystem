@model EventRegistrationSystem.ViewModel.Admin.EventDetailsViewModel

@{
    ViewData["Title"] = "Event Details";
    Layout = "_AdminLayout";
}

<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">
    <div class="max-w-6xl mx-auto">

        <!-- 🎯 GRADIENT HEADER (matches Dashboard & Events Index) -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white rounded-full text-xs font-medium">
                            @(Model.Event.IsPublished ? "Published" : "Draft")
                        </span>
                        <span class="text-indigo-100 text-sm">
                            <i class="fas fa-calendar-alt mr-1"></i> Created @Model.Event.CreatedAt.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                    <h1 class="text-3xl lg:text-4xl font-bold text-white">@Model.Event.Title</h1>
                </div>
                <div class="flex items-center gap-3">
                    <a asp-action="Edit" asp-route-id="@Model.Event.Id"
                       class="bg-white text-indigo-700 px-5 py-2.5 rounded-xl font-medium hover:bg-indigo-50 transition-all shadow-md hover:shadow-xl inline-flex items-center">
                        <i class="fas fa-edit mr-2"></i>Edit Event
                    </a>
                    <a asp-action="Index"
                       class="bg-white/20 backdrop-blur-sm text-white px-5 py-2.5 rounded-xl font-medium hover:bg-white/30 transition-all inline-flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>Back
                    </a>
                </div>
            </div>
        </div>

        <!-- 📊 STATS & POSTER GRID -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
            <!-- Poster Card (spans 2 columns on large screens) -->
            <div class="lg:col-span-2 bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
                @if (!string.IsNullOrEmpty(Model.Event.ImageUrl))
                {
                    <div class="relative h-80 w-full bg-slate-100 group">
                        <img src="@Model.Event.ImageUrl" alt="@Model.Event.Title"
                             class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
                    </div>
                }
                else
                {
                    <div class="h-80 bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                        <div class="text-center">
                            <i class="fas fa-calendar text-indigo-300 text-6xl mb-3"></i>
                            <p class="text-slate-500 text-sm">No poster uploaded</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Registration Stats Card (enhanced) -->
            <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-2xl shadow-lg border border-indigo-200 p-6 flex flex-col justify-between">
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-xs font-semibold uppercase tracking-wider text-indigo-600">Registrations</span>
                        <span class="bg-indigo-200 text-indigo-800 px-2 py-1 rounded-full text-xs font-medium">
                            @(Model.Event.IsPublished ? "Active" : "Draft")
                        </span>
                    </div>
                    <div class="flex items-baseline">
                        <span class="text-5xl font-bold text-indigo-800">@Model.TotalRegistrations</span>
                        <span class="ml-2 text-indigo-600 font-medium">attendees</span>
                    </div>
                    @if (Model.Event.Capacity.HasValue)
                    {
                        var percentage = Model.Event.Capacity.Value > 0
                        ? (int)((double)Model.TotalRegistrations / Model.Event.Capacity.Value * 100)
                        : 0;
                        <div class="mt-4 space-y-2">
                            <div class="flex justify-between text-sm">
                                <span class="text-slate-600">Capacity</span>
                                <span class="font-semibold text-indigo-800">@Model.Event.Capacity</span>
                            </div>
                            <div class="w-full bg-white rounded-full h-2.5 overflow-hidden">
                                <div class="bg-indigo-600 h-2.5 rounded-full transition-all duration-500"
                                     style="width: @Math.Min(percentage, 100)%"></div>
                            </div>
                            <div class="flex justify-between text-xs text-slate-500">
                                <span>@percentage% filled</span>
                                <span>@(Model.Event.Capacity - Model.TotalRegistrations) spots left</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="mt-4 text-sm text-slate-600">Unlimited capacity</p>
                    }
                </div>
                <div class="mt-6 pt-4 border-t border-indigo-200">
                    <div class="flex items-center text-sm text-indigo-700">
                        <i class="fas fa-chart-line mr-2"></i>
                        <span>Check-in rate: @Model.CheckInPercentage.ToString("F1")%</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 📝 DESCRIPTION & DETAILS CARD -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-8 mb-8">
            @if (!string.IsNullOrEmpty(Model.Event.Description))
            {
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center">
                        <i class="fas fa-align-left text-indigo-500 mr-2"></i>
                        Description
                    </h3>
                    <div class="prose prose-slate max-w-none text-slate-600">
                        @Model.Event.Description
                    </div>
                </div>
            }

            <!-- 📅 EVENT DETAILS GRID (enhanced) -->
            <div>
                <h3 class="text-lg font-semibold text-slate-800 mb-5 flex items-center">
                    <i class="fas fa-info-circle text-indigo-500 mr-2"></i>
                    Event Information
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Start Date -->
                    <div class="flex items-start p-4 bg-slate-50 rounded-xl border border-slate-200 hover:shadow-md transition">
                        <div class="h-12 w-12 rounded-xl bg-indigo-100 flex items-center justify-center text-indigo-700 shrink-0">
                            <i class="fas fa-calendar-day text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Start Date</p>
                            <p class="text-base font-semibold text-slate-800">@Model.Event.StartDate.ToString("dddd, MMMM dd, yyyy")</p>
                            <p class="text-sm text-slate-600">@Model.Event.StartDate.ToString("h:mm tt")</p>
                        </div>
                    </div>
                    <!-- End Date -->
                    <div class="flex items-start p-4 bg-slate-50 rounded-xl border border-slate-200 hover:shadow-md transition">
                        <div class="h-12 w-12 rounded-xl bg-amber-100 flex items-center justify-center text-amber-700 shrink-0">
                            <i class="fas fa-calendar-check text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">End Date</p>
                            <p class="text-base font-semibold text-slate-800">@Model.Event.EndDate.ToString("dddd, MMMM dd, yyyy")</p>
                            <p class="text-sm text-slate-600">@Model.Event.EndDate.ToString("h:mm tt")</p>
                        </div>
                    </div>
                    <!-- Location -->
                    <div class="flex items-start p-4 bg-slate-50 rounded-xl border border-slate-200 hover:shadow-md transition">
                        <div class="h-12 w-12 rounded-xl bg-emerald-100 flex items-center justify-center text-emerald-700 shrink-0">
                            <i class="fas fa-map-marker-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Location</p>
                            <p class="text-base font-semibold text-slate-800">@(Model.Event.Location ?? "Not specified")</p>
                            <p class="text-sm text-slate-600">Venue details</p>
                        </div>
                    </div>
                    <!-- Capacity -->
                    <div class="flex items-start p-4 bg-slate-50 rounded-xl border border-slate-200 hover:shadow-md transition">
                        <div class="h-12 w-12 rounded-xl bg-purple-100 flex items-center justify-center text-purple-700 shrink-0">
                            <i class="fas fa-users text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Capacity</p>
                            <p class="text-base font-semibold text-slate-800">@(Model.Event.Capacity?.ToString("N0") ?? "Unlimited")</p>
                            <p class="text-sm text-slate-600">@(Model.Event.Capacity.HasValue ? "seats available" : "no limit")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 📋 RECENT REGISTRATIONS PREVIEW (optional enhancement) -->
        @* You could add a recent registrations table here – but not requested, so optional *@

    </div>
</div>