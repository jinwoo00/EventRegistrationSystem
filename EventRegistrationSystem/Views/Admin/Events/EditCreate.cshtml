@model EventRegistrationSystem.ViewModel.Admin.EventViewModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Event" : "Edit Event";
    Layout = "_AdminLayout";
}

<!-- SCROLLABLE CONTAINER (same as other admin pages) -->
<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">
    <div class="max-w-4xl mx-auto">

        <!-- GRADIENT HEADER (matches Events Index & Dashboard) -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-white">@ViewData["Title"]</h1>
                    <p class="text-indigo-100 mt-1">
                        @(Model.Id == 0 ? "Fill in the details to create a new event." : "Update the event information below.")
                    </p>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Index"
                       class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-xl hover:bg-white/30 transition-all inline-flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Events
                    </a>
                </div>
            </div>
        </div>

        <!-- FORM CARD -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImageUrl" />

                <div class="p-8 space-y-8">
                    <!-- Title -->
                    <div class="space-y-2">
                        <label asp-for="Title" class="block text-sm font-semibold text-slate-700">
                            Event Title <span class="text-rose-500">*</span>
                        </label>
                        <input asp-for="Title"
                               class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm"
                               placeholder="e.g. Tech Conference 2026" />
                        <span asp-validation-for="Title" class="text-sm text-rose-600"></span>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2">
                        <label asp-for="Description" class="block text-sm font-semibold text-slate-700">Description</label>
                        <textarea asp-for="Description"
                                  rows="5"
                                  class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm"
                                  placeholder="Describe your event..."></textarea>
                    </div>

                    <!-- Date & Time Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="StartDate" class="block text-sm font-semibold text-slate-700">
                                Start Date & Time <span class="text-rose-500">*</span>
                            </label>
                            <input asp-for="StartDate"
                                   type="datetime-local"
                                   value="@Model.StartDateFormatted"
                                   step="60"
                                   class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm" />
                            <span asp-validation-for="StartDate" class="text-sm text-rose-600"></span>
                        </div>
                        <div class="space-y-2">
                            <label asp-for="EndDate" class="block text-sm font-semibold text-slate-700">
                                End Date & Time <span class="text-rose-500">*</span>
                            </label>
                            <input asp-for="EndDate"
                                   type="datetime-local"
                                   value="@Model.EndDateFormatted"
                                   step="60"
                                   class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm" />
                            <span asp-validation-for="EndDate" class="text-sm text-rose-600"></span>
                        </div>
                    </div>

                    <!-- Location & Capacity -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="Location" class="block text-sm font-semibold text-slate-700">Location</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-map-marker-alt text-slate-400"></i>
                                </div>
                                <input asp-for="Location"
                                       class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm"
                                       placeholder="Venue or online link" />
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label asp-for="Capacity" class="block text-sm font-semibold text-slate-700">Capacity</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-users text-slate-400"></i>
                                </div>
                                <input asp-for="Capacity"
                                       type="number"
                                       class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition shadow-sm"
                                       placeholder="e.g. 200" />
                            </div>
                        </div>
                    </div>

                    <!-- Poster Upload Section -->
                    <div class="space-y-4">
                        <label class="block text-sm font-semibold text-slate-700">Event Poster</label>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Upload Area -->
                            <div class="space-y-2">
                                <div class="border-2 border-dashed border-slate-300 rounded-xl p-6 hover:border-indigo-400 transition bg-slate-50/50">
                                    <div class="text-center">
                                        <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-2"></i>
                                        <p class="text-sm text-slate-600 mb-1">Click or drag to upload</p>
                                        <p class="text-xs text-slate-500">JPG, PNG up to 5MB</p>
                                        <input asp-for="PosterFile"
                                               type="file"
                                               accept="image/*"
                                               class="hidden"
                                               id="poster-upload" />
                                        <button type="button"
                                                onclick="document.getElementById('poster-upload').click();"
                                                class="mt-4 px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg text-sm font-medium hover:bg-indigo-100 transition">
                                            Choose Image
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="PosterFile" class="text-sm text-rose-600"></span>
                            </div>

                            <!-- Preview Area -->
                            <div>
                                <p class="text-sm font-medium text-slate-700 mb-2">Preview</p>
                                <div id="poster-preview" class="h-32 w-full rounded-lg border border-slate-200 bg-slate-50 flex items-center justify-center overflow-hidden">
                                    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                                    {
                                        <img src="@Model.ExistingImageUrl" class="h-full w-full object-cover" />
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <i class="fas fa-image text-2xl text-slate-300"></i>
                                            <p class="text-xs text-slate-500 mt-1">No poster selected</p>
                                        </div>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                                {
                                    <div class="mt-2 flex items-center justify-end">
                                        <button type="button"
                                                onclick="removePoster()"
                                                class="text-xs text-rose-600 hover:text-rose-800 flex items-center">
                                            <i class="fas fa-trash-alt mr-1"></i> Remove
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Publish Toggle -->
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-xl border border-slate-200">
                        <div>
                            <label asp-for="IsPublished" class="text-sm font-semibold text-slate-700 cursor-pointer">
                                Publish immediately
                            </label>
                            <p class="text-xs text-slate-500 mt-0.5">Published events are visible to participants</p>
                        </div>
                        <div class="relative inline-block w-12 h-6 rounded-full cursor-pointer">
                            <input asp-for="IsPublished"
                                   type="checkbox"
                                   class="sr-only peer"
                                   id="publish-toggle" />
                            <label for="publish-toggle"
                                   class="absolute inset-0 rounded-full bg-slate-300 peer-checked:bg-indigo-600 transition peer-checked:shadow-md cursor-pointer"></label>
                            <span class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-all peer-checked:left-7 shadow"></span>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="px-8 py-6 bg-slate-50 border-t border-slate-200 flex items-center justify-end space-x-4">
                    <a asp-action="Index"
                       class="px-6 py-2.5 border border-slate-300 rounded-xl text-slate-700 font-medium hover:bg-slate-100 transition shadow-sm">
                        Cancel
                    </a>
                    <button type="submit"
                            class="px-8 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-medium hover:from-indigo-700 hover:to-purple-700 transition shadow-md hover:shadow-lg flex items-center">
                        <i class="fas fa-save mr-2"></i>
                        @(Model.Id == 0 ? "Create Event" : "Save Changes")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Live poster preview
        document.getElementById('poster-upload')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('poster-preview');
                    preview.innerHTML = `<img src="${e.target.result}" class="h-full w-full object-cover" />`;
                }
                reader.readAsDataURL(file);
            }
        });

        // Remove poster function
        function removePoster() {
            document.getElementById('poster-preview').innerHTML = `
                <div class="text-center">
                    <i class="fas fa-image text-2xl text-slate-300"></i>
                    <p class="text-xs text-slate-500 mt-1">No poster selected</p>
                </div>
            `;
            // Clear the file input if any
            const fileInput = document.getElementById('poster-upload');
            if (fileInput) fileInput.value = '';
            // Clear existing image URL hidden field
            const hiddenField = document.querySelector('input[name="ExistingImageUrl"]');
            if (hiddenField) hiddenField.value = '';
        }
    </script>
}