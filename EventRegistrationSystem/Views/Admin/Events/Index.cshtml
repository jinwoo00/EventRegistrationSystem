@using EventRegistrationSystem.DTOs
@model EventRegistrationSystem.Repositories.PagedResult<EventListItemDTO>

@{
    ViewData["Title"] = "Manage Events";
    Layout = "_AdminLayout";

    var routeParams = new Dictionary<string, object>
    {
        { "status", ViewBag.CurrentStatus ?? "incoming" },
        { "search", Context.Request.Query["search"].ToString() }
    };
}

<!-- SCROLLABLE CONTAINER -->
<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">

    <!-- Page Header -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-white">Events</h1>
                <p class="text-indigo-100 mt-1">Manage all your events, publish drafts, and track registrations.</p>
            </div>
            <a asp-controller="Events" asp-action="Create"
               class="bg-white text-indigo-700 px-5 py-2.5 rounded-xl font-medium hover:bg-indigo-50 transition-all shadow-md hover:shadow-xl inline-flex items-center">
                <i class="fas fa-plus-circle mr-2"></i>
                Create New Event
            </a>
        </div>
    </div>

    <!-- Stats Summary Cards (global counts) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
            <div class="h-10 w-10 rounded-xl bg-indigo-100 flex items-center justify-center text-indigo-700">
                <i class="fas fa-calendar-check text-lg"></i>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Total Events</p>
                <h3 class="text-xl font-bold text-slate-800">@ViewBag.TotalEvents</h3>
            </div>
        </div>
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
            <div class="h-10 w-10 rounded-xl bg-emerald-100 flex items-center justify-center text-emerald-700">
                <i class="fas fa-globe text-lg"></i>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Published</p>
                <h3 class="text-xl font-bold text-slate-800">@ViewBag.PublishedCount</h3>
            </div>
        </div>
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
            <div class="h-10 w-10 rounded-xl bg-amber-100 flex items-center justify-center text-amber-700">
                <i class="fas fa-pencil-alt text-lg"></i>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">Drafts</p>
                <h3 class="text-xl font-bold text-slate-800">@ViewBag.DraftCount</h3>
            </div>
        </div>
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center">
            <div class="h-10 w-10 rounded-xl bg-purple-100 flex items-center justify-center text-purple-700">
                <i class="fas fa-calendar-plus text-lg"></i>
            </div>
            <div class="ml-3">
                <p class="text-xs font-medium text-slate-500 uppercase tracking-wider">This Month</p>
                <h3 class="text-xl font-bold text-slate-800">@ViewBag.ThisMonthCount</h3>
            </div>
        </div>
    </div>

    <!-- Status Tabs -->
    <div class="mb-6 border-b border-slate-200">
        <nav class="flex space-x-8">
            <a asp-action="Index" asp-route-status="incoming" asp-route-search="@ViewBag.CurrentSearch"
               class="py-3 px-1 inline-flex items-center border-b-2 font-medium text-sm @(ViewBag.CurrentStatus == "incoming" ? "border-indigo-500 text-indigo-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")">
                <i class="fas fa-calendar-day mr-2"></i>Incoming
            </a>
            <a asp-action="Index" asp-route-status="passed" asp-route-search="@ViewBag.CurrentSearch"
               class="py-3 px-1 inline-flex items-center border-b-2 font-medium text-sm @(ViewBag.CurrentStatus == "passed" ? "border-indigo-500 text-indigo-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")">
                <i class="fas fa-calendar-times mr-2"></i>Passed
            </a>
            <a asp-action="Index" asp-route-status="all" asp-route-search="@ViewBag.CurrentSearch"
               class="py-3 px-1 inline-flex items-center border-b-2 font-medium text-sm @(ViewBag.CurrentStatus == "all" ? "border-indigo-500 text-indigo-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")">
                <i class="fas fa-list mr-2"></i>All
            </a>
        </nav>
    </div>

    <!-- Search Card (preserves status) -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 mb-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <input type="hidden" name="status" value="@ViewBag.CurrentStatus" />
            <div class="md:col-span-3">
                <label class="block text-xs font-medium text-slate-500 mb-1">Search</label>
                <div class="relative">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                    <input type="text" name="search" value="@Context.Request.Query["search"]"
                           placeholder="Title, description, location..."
                           class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500" />
                </div>
            </div>
            <div class="flex items-center space-x-3 md:col-span-1 justify-end">
                <a asp-action="Index" asp-route-status="@ViewBag.CurrentStatus" class="px-4 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50 transition">
                    Clear
                </a>
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-sm">
                    <i class="fas fa-filter mr-2"></i>Apply
                </button>
            </div>
        </form>
    </div>

    <!-- Events Table -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Poster</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Event</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date & Location</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 bg-white">
                    @foreach (var ev in Model.Items)
                    {
                        <tr class="hover:bg-slate-50 transition-colors duration-150">
                            <!-- Poster -->
                            <td class="px-6 py-4">
                                @if (!string.IsNullOrEmpty(ev.ImageUrl))
                                {
                                    <div class="h-14 w-14 rounded-lg overflow-hidden shadow-sm border border-slate-200">
                                        <img src="@ev.ImageUrl" alt="Poster" class="h-full w-full object-cover">
                                    </div>
                                }
                                else
                                {
                                    <div class="h-14 w-14 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400 border border-slate-200">
                                        <i class="fas fa-image text-xl"></i>
                                    </div>
                                }
                            </td>
                            <!-- Title -->
                            <td class="px-6 py-4">
                                <div class="font-semibold text-slate-900">@ev.Title</div>
                                <div class="text-xs text-slate-500 mt-1">ID: @ev.Id</div>
                            </td>
                            <!-- Date & Location -->
                            <td class="px-6 py-4">
                                <div class="flex items-center text-slate-700">
                                    <i class="fas fa-calendar-alt text-indigo-500 w-4 mr-2"></i>
                                    <span class="text-sm">@ev.StartDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="flex items-center text-slate-600 mt-1">
                                    <i class="fas fa-map-marker-alt text-amber-500 w-4 mr-2"></i>
                                    <span class="text-sm">@ev.Location</span>
                                </div>
                            </td>
                            <!-- Status -->
                            <td class="px-6 py-4">
                                @if (ev.IsPublished)
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                        <span class="h-2 w-2 bg-green-500 rounded-full mr-2"></span>
                                        Published
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-600 border border-slate-200">
                                        <span class="h-2 w-2 bg-slate-400 rounded-full mr-2"></span>
                                        Draft
                                    </span>
                                }
                            </td>
                            <!-- Actions -->
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-2">
                                    <a asp-controller="Registrations" asp-action="ExportByEvent" asp-route-eventId="@ev.Id"
                                       class="text-slate-500 hover:text-green-600 p-2 hover:bg-green-50 rounded-lg transition"
                                       title="Export Registrations">
                                        <i class="fas fa-file-csv"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@ev.Id"
                                       class="text-slate-500 hover:text-indigo-600 p-2 hover:bg-indigo-50 rounded-lg transition"
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@ev.Id"
                                       class="text-slate-500 hover:text-amber-600 p-2 hover:bg-amber-50 rounded-lg transition"
                                       title="Edit Event">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @* <a asp-controller="CertificateSend" asp-action="Event" asp-route-eventId="@ev.Id"
                                       class="text-slate-500 hover:text-purple-600 p-2 hover:bg-purple-50 rounded-lg transition"
                                       title="Send Certificates">
                                        <i class="fas fa-envelope"></i>
                                    </a> *@
                                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" class="inline"
                                          onsubmit="return confirm('Are you sure you want to delete this event?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="text-slate-500 hover:text-rose-600 p-2 hover:bg-rose-50 rounded-lg transition"
                                                title="Delete Event">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <partial name="_Pagination" model="Model" view-data='new ViewDataDictionary(ViewData) { { "routeParams", routeParams } }' />

        <!-- Empty State -->
        @if (!Model.Items.Any())
        {
            <div class="text-center py-16">
                <div class="inline-flex items-center justify-center h-20 w-20 rounded-full bg-slate-100 mb-4">
                    <i class="fas fa-calendar-times text-slate-400 text-4xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-slate-800 mb-2">No events found</h3>
                <p class="text-slate-500 mb-6">@(ViewBag.CurrentStatus == "passed" ? "No passed events yet." : "Create your first event to get started.")</p>
                <a asp-controller="Events" asp-action="Create"
                   class="inline-flex items-center px-5 py-2.5 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition shadow-md">
                    <i class="fas fa-plus-circle mr-2"></i>Create New Event
                </a>
            </div>
        }
    </div>

</div>