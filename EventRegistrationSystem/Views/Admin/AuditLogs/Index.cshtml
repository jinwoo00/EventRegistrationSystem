@using EventRegistrationSystem.DTOs
@model EventRegistrationSystem.Repositories.PagedResult<AuditLogListItemDTO>

@{
    ViewData["Title"] = "Audit Logs";
    Layout = "_AdminLayout";

    var routeParams = new Dictionary<string, object>
    {
        { "search", ViewBag.CurrentSearch },
        { "action", ViewBag.CurrentAction },
        { "fromDate", ViewBag.CurrentFromDate },
        { "toDate", ViewBag.CurrentToDate }
    };
}

<div class="flex-1 overflow-y-auto dashboard-scroll bg-slate-50 p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-8 shadow-lg">
            <h1 class="text-3xl font-bold text-white">Audit Logs</h1>
            <p class="text-indigo-100 mt-1">Track all system events and user actions.</p>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 mb-6">
            <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4 items-end">
                <div>
                    <label class="block text-xs font-medium text-slate-500 mb-1">Search</label>
                    <input type="text" name="search" value="@ViewBag.CurrentSearch"
                           placeholder="User email, description, IP..."
                           class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500" />
                </div>
                <div>
                    <label class="block text-xs font-medium text-slate-500 mb-1">Action</label>
                    <select name="actionFilter" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500">
                        <option value="">All</option>
                        @if (ViewBag.Actions != null)
                        {
                            foreach (var act in ViewBag.Actions as IEnumerable<SelectListItem>)
                            {
                                <option value="@act.Value" selected="@act.Selected">@act.Text</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-xs font-medium text-slate-500 mb-1">From Date</label>
                    <input type="date" name="fromDate" value="@ViewBag.CurrentFromDate"
                           class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500" />
                </div>
                <div>
                    <label class="block text-xs font-medium text-slate-500 mb-1">To Date</label>
                    <input type="date" name="toDate" value="@ViewBag.CurrentToDate"
                           class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500" />
                </div>
                <div class="flex items-center space-x-3 justify-end md:col-span-1">
                    <a asp-action="Index" class="px-4 py-2 border border-slate-300 rounded-lg text-slate-700 hover:bg-slate-50 transition">Clear</a>
                    <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-sm">
                        <i class="fas fa-filter mr-2"></i>Apply
                    </button>
                </div>
            </form>
        </div>

        <!-- Logs Table -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Timestamp</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Action</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">User</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Role</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Description</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">IP Address</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 bg-white">
                        @if (Model != null && Model.Items.Any())
                        {
                            foreach (var log in Model.Items)
                            {
                                <tr class="hover:bg-slate-50 transition">
                                    <td class="px-6 py-4 text-sm text-slate-600">
                                        @log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="px-2 py-1 bg-slate-100 text-slate-800 rounded-full text-xs font-medium">@log.Action</span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-slate-600">@log.UserEmail</td>
                                    <td class="px-6 py-4 text-sm text-slate-600">@log.UserRole</td>
                                    <td class="px-6 py-4 text-sm text-slate-600">@log.Description</td>
                                    <td class="px-6 py-4 text-sm text-slate-600">@log.IpAddress</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="px-6 py-16 text-center">
                                    <i class="fas fa-history text-slate-300 text-4xl mb-3"></i>
                                    <p class="text-slate-500">No audit logs found.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model != null && Model.TotalPages > 1)
            {
                <partial name="_Pagination" model="Model" view-data='new ViewDataDictionary(ViewData) { { "routeParams", routeParams } }' />
            }
        </div>
    </div>
</div>