@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-3xl shadow-xl p-8 text-center">
        <i class="fas fa-check-circle text-green-500 text-5xl mb-4"></i>
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Password Reset Successful</h1>
        <p class="text-gray-600 mb-6">Your password has been reset. You can now log in with your new password.</p>
        <a asp-action="Login" class="inline-block bg-indigo-600 text-white font-semibold py-3 px-6 rounded-xl hover:bg-indigo-700 transition shadow-md">
            Go to Login
        </a>
    </div>
</div>